<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlogWall" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_mid</item>
        <item name="colorSecondaryVariant">@color/purple_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:autofilledHighlight">@color/autofill</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@drawable/input_style</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="errorTextAppearance">@style/ErrorInputStyle</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="ErrorInputStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/autofill</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.BlogWall.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_mid</item>
        <item name="colorSecondaryVariant">@color/purple_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>