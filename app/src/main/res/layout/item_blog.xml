<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_ex"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/blog_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/blog_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/grey"
            android:scaleType="centerCrop"
            android:src="@color/light_grey" />
        </androidx.cardview.widget.CardView>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/blog_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/dm_serif_display_regular"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:text="Sample heading"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/blog_image_container"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/blog_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:singleLine="true"
            android:text="Khun Agures"
            android:textColor="#4F4F4F"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/blog_heading"
            app:layout_constraintStart_toStartOf="@+id/blog_heading"
            app:layout_constraintTop_toBottomOf="@+id/blog_heading" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/blog_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center_vertical"
            android:text="2 min read"
            android:textColor="#4F4F4F"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/blog_heading"
            app:layout_constraintStart_toStartOf="@+id/blog_heading"
            app:layout_constraintTop_toBottomOf="@+id/blog_author" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>